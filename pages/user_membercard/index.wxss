/* pages/user_membercard/index.wxss */
.container{
  padding: 0 40rpx;
}

.membercardlist{
  padding-bottom: 50rpx;
}

.item{
  width: 672rpx;
	height: 166rpx;
  margin-top: 32rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .left{
  display: flex;
  align-items: center;
}

.item .left .middle{
  margin-left: 20rpx;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #999999;
}

.item .left .middle .title{
  font-size: 32rpx;
	font-weight: bold;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}
.item .left image{
  width: 98rpx;
	height: 62rpx;
}

.item .todetail{
  width: 134rpx;
	height: 54rpx;
	border-radius: 10rpx;
	border: solid 1rpx #f15a31;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
}