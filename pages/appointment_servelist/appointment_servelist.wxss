/* pages/appointment_servelist/appointment_servelist.wxss */

page {
  background-color: #f3f4f6 !important;
}

.container {
  padding: 0 40rpx;
}

.items{
  width: 100%;
  height: 60rpx;
  position: fixed;
  z-index: 99;
  background: #f3f4f6;
  padding: 0 20rpx;
}
.title{
  width: 100%;
  line-height: 60rpx;
  font-size: 28rpx;
  white-space: nowrap;
	color: #666666;
}
.title .scroll_item{
  display: inline-block;
  margin: 0 23rpx;
  height: 60rpx;
  box-sizing: content-box;
}
/* .title view:last-child{
  margin-right: 50rpx;
} */
.titleSel{
  border-bottom: 4rpx solid #f15a31;
  color: #333333;
}

.swiper {
  width: 100%;
  height: 100vh;
  padding: 0 40rpx;
  padding-bottom: 30rpx;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.content {
  width: 670rpx;
  height: auto;
  /* min-height: 1000rpx; */
  background-color: #fff;
  border-radius: 10rpx;
  padding: 5rpx 30rpx 45rpx 30rpx;
  margin-top: 88rpx;
}

.content .item {
  height: 149rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .item .itemleft {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.content .item .itemleft image {
  width: 91rpx;
  height: 91rpx;
  margin-left: 2rpx;
  margin-right: 23rpx;
}

.content .item .itemright {
  font-size: 26rpx;
  color: #b5b6b8;
}
