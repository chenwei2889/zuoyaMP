/* pages/user_mybalance/index.wxss */
page {
  background-color: #fff !important;
}

.content{
  width: 100%;
	height: 390rpx;
	background-color: #f15a31;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  position: relative;
}

.content .balance{
  font-size: 80rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}

.total{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
}

.total .item{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 370rpx;
	height: 130rpx;
	background-color: #ef8163;
}

.tixianout{
  display: flex;
  justify-content: center;
  margin-top: 102rpx;
}

.tixian{
  width: 500rpx;
	height: 70rpx;
  line-height: 70rpx;
  text-align: center;
	background-color: #f15a31;
	border-radius: 35rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}

.godetailout{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.godetail{
  width: 500rpx;
	height: 70rpx;
  line-height: 70rpx;
  text-align: center;
	border-radius: 35rpx;
	border: solid 1px #f15a31;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
}