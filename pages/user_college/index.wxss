/* pages/user_college/index.wxss */

page{
  background-color: #fff!important;
}

.list {
  padding-bottom: 50rpx;
}

.list .item{
  padding: 0 20rpx;
  width: 100%;
  height: 130rpx;
  border-bottom: solid 1rpx #ececec;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list .item .left{
  height: 130rpx;
  display: flex;
  align-items: center;
}

.list .item .left .img{
  width: 78rpx;
  height: 89rpx;
  margin-right: 20rpx;
}

.list .item .left .img image{
  width: 100%;
  height: 100%;
}

.list .item .left .detail{
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}

.list .item .left .detail view:first-child{
  font-size: 30rpx;
  line-height: 50rpx;
	font-weight: bold;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}

.list .item .right{
  width: 130rpx;
	height: 40rpx;
	background-color: #f15a31;
	border-radius: 20rpx;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  line-height: 40rpx;
  text-align: center;
}


