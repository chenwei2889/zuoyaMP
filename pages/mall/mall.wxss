/* pages/mall/mall.wxss */

page {
  background-color: #fff !important;
}

.header {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 9;
}

.header .input {
  width: 700rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
}

.header .input .iconfont {
  font-size: 35rpx;
  color: #555;
}

.header .input .placeholder {
  color: #999;
}

.header .input input {
  font-size: 26rpx;
  height: 100%;
  width: 597rpx;
}

.items {
  width: 100%;
  height: 60rpx;
  position: fixed;
  z-index: 99;
  background: #fff;
  padding: 0 20rpx;
}

.title {
  width: 100%;
  line-height: 60rpx;
  font-size: 28rpx;
  white-space: nowrap;
  color: #666;
  overflow:hidden;
}

.title .scroll_item {
  display: inline-block;
  margin: 0 23rpx;
  height: 60rpx;
  /* box-sizing: content-box; */
}

/* .title view:last-child{
  margin-right: 50rpx;
} */

.titleSel {
  border-bottom: 4rpx solid #f15a31;
  color: #f15a31;
}

.main {
  margin-top: 156rpx;
}

.content {
  display: none;
}

.content.active {
  display: block;
}

.swiper {
  padding-top: 20rpx;
}

.swiper image {
  display: block;
  width: 100%;
  height: 440rpx;
}

.product {
  padding: 40rpx 20rpx;
}

.product .title {
  font-size: 30rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #444;
  text-align: center;
  margin-bottom: 40rpx;
}

.product .title view:last-child {
  font-size: 24rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #999;
}

.product .list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.product .list .proimg {
  width: 345rpx;
  height: 400rpx;
}

.product .list image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.product .list .item {
  width: 345rpx;
  height: 510rpx;
  margin-bottom: 40rpx;
}

.product .list .item .name {
  width: 345rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 70rpx;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #444;
}

.product .list .item .price {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #333;
}

.product .list .item .price view:last-child {
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #f15a31;
}
