/* pages/appointment_yuejishi/appointment_yuejishi.wxss */
page {
  background-color: #f3f4f6 !important;
}

.container {
  padding: 0 40rpx;
}

.store {
  width: 670rpx;
  height: 120rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.store .storeleft image {
  width: 29rpx;
  height: 27rpx;
}

.store .storeleft text {
  font-size: 28rpx;
  margin-left: 23rpx;
  color: #333;
}

.store .storeright text {
  font-size: 28rpx;
  color: #ccc;
  margin-right: 23rpx;
}
.jishilistout{
  padding-bottom: 40rpx;
}
.jishilist{
  width: 100%;
  height: auto;
  padding-left: 33rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}
.jishilist .item{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
	color: #000000;
}
.jishilist .item image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 25rpx;
}
.jishilist .item .itemleft{
  display: flex;
  align-items: center;
}
.jishilist .item .itemright{
  width: 220rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
  color: #f15a31;
  font-size: 40rpx;
	font-style: italic;
  justify-content: space-around;
}