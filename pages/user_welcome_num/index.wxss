/* pages/user_welcome_num/index.wxss */
.container {
  padding: 0 30rpx;
}

.list{
  padding-bottom: 50rpx;
}

.list .item{
  width: 100%;
	height: 160rpx;
  padding: 20rpx 0 20rpx 34rpx;
  margin-top: 20rpx;
	background-color: #ffffff;
	box-shadow: 0 5rpx 8rpx 0 rgba(0, 0, 0, 0.13);
	border-radius: 10rpx;
	border: solid 1rpx #e2e2e2;
  display: flex;
  align-items: center;
}

.list .item .avatar{
  width: 120rpx;
	height: 120rpx; 
}

.list .item image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.list .item .content{
  height: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 30rpx;
  font-size: 32rpx;
	font-weight: bold;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.list .item .content view:last-child{
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #555555;
}