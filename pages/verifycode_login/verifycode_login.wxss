/* pages/verifycode_login/verifycode_login.wxss */
page {
  background-color: #fff !important;
}

.container{
  padding: 0 95rpx;
}
.logo{
  width: 156rpx;
	height: 155rpx;
  margin: 116rpx auto;
}
.logo image{
  max-width: 100%;
  max-height: 100%;
}

.ipt{
  position: relative;
}
.ipt input{
  width: 100%;
  height: 110rpx;
  border-bottom: solid 1rpx #e5e5e5;
}

.placeholder{
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #bfbfbf;
}

.getverifycode{
  position: absolute;
  right: 0;
  bottom: 33rpx;
  width: 153rpx;
	height: 45rpx;
	border-radius: 23rpx;
	border: solid 1rpx #bfbfbf;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #dcd9d9;
  text-align: center;
  line-height: 45rpx;
  z-index: 999;
}

.btn{
  width: 550rpx;
	height: 84rpx;
  margin: 35rpx auto;
	background-color: #f15a31;
	border-radius: 10rpx;
  text-align: center;
  line-height: 84rpx;
  font-size: 32rpx;
	color: #ffffff;
}

.read{
  font-size: 22rpx;
  text-align: center;
	font-weight: normal;
	font-stretch: normal;
	line-height: 60rpx;
	letter-spacing: 2rpx;
	color: #858585;
}

.read .memberitem{
  font-size: 22rpx;
	font-weight: normal;
	letter-spacing: 2rpx;
	color: #5c6a8d;
}



