<!--pages/verifycode_login/verifycode_login.wxml-->
<navbar parameter='{{parameter}}'></navbar>
<view class="container">
  <view class="logo">
    <image src="/images/hand.png"></image>
  </view>
  <form bindsubmit="formSubmit">
    <view class="ipt">
      <input type="text" placeholder="请输入手机号" placeholder-class="placeholder"></input>
      <input type="text" placeholder="请输入手机验证码" placeholder-class="placeholder"></input>
      <view class="getverifycode" bindtap="getVerifyCode">获取验证码</view>
    </view>
    <button form-type="submit" hover-class="none" class="btn">确定</button>
    <view class="read">
      <view>点击确定即表示已阅读并同意 <text bindtap="memberItem" class="memberitem">《注册会员服务条款》</text>
      </view>
    </view>
  </form>
</view>