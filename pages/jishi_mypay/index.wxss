/* pages/jishi_mypay/index.wxss */
page{
  background-color: #fff!important;
}

.header{
  width: 100%;
	height: 300rpx;
  background-color: #f15a31;
  text-align: center;
  font-size: 80rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  padding-top: 60rpx;
}

.header view:last-child{
  font-size: 28rpx;
  margin-top: 20rpx;
}

.content{
  width: 690rpx;
	height: 300rpx;
  margin: -35rpx 30rpx 0 30rpx;
  padding: 15rpx 40rpx;
	background-color: #ffffff;
	box-shadow: 0px 5rpx 13rpx 0px 
		rgba(0, 0, 0, 0.13);
	border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.content .item{
  width: 305rpx;
  height: 135rpx;
  padding: 15rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}

.content .item view:last-child{
  font-size: 36rpx;
	color: #333333;
}

.content .item .iconfont{
  margin-left: 12rpx;
}

.content .item.first{
  border-right: solid 1rpx #eeeeee;
  border-bottom: solid 1rpx #eeeeee;
}

.content .item.last{
  border-left: solid 1rpx #eeeeee;
  border-top: solid 1rpx #eeeeee;
}

.btn{
  width: 500rpx;
	height: 70rpx;
	border-radius: 35rpx;
	border: solid 1rpx #f15a31;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
  margin: 127rpx auto 0 auto;
  text-align: center;
  line-height: 70rpx
}