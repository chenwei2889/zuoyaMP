/* pages/tab/tab.wxss */

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.items {
  background: #f7f7f7;
  text-align: center;
  font-size: 11pt;
}

.title {
  white-space: nowrap;
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
}

.scroll_item {
  padding: 0 50rpx;
  height: 88rpx;
  display: inline-block;
  box-sizing: border-box;
}

.titleSel {
  color: #159de3;
  border-bottom: 4rpx solid #159de3;
  font-size: 32rpx;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.contentout {
  padding-bottom: 30rpx;
}

.content {
  width: 670rpx;
  height: auto;
  /* min-height: 1000rpx; */
  background-color: #fff;
  border-radius: 10rpx;
  padding: 5rpx 30rpx 45rpx 30rpx;
  margin-top: 25rpx;
}

.content .item {
  height: 149rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .item .itemleft {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.content .item .itemleft image {
  width: 91rpx;
  height: 91rpx;
  margin-left: 2rpx;
  margin-right: 23rpx;
}

.content .item .itemright {
  font-size: 26rpx;
  color: #b5b6b8;
}