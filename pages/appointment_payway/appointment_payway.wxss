/* pages/appointment_payway/appointment_payway.wxss */
page{
 height: 100%;
 width: 100%;
}
.container {
  height: 100%;
  padding: 0 100rpx;
}
 
.paywaybg {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}
.container .wepay{
  width: 550rpx;
	height: 238rpx;
  padding: 0 50rpx;
  margin-top: 220rpx;
	background-color: #f2f9f1;
	border-radius: 10rpx;
	opacity: 0.9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .wepay view{
  font-size: 30rpx;
	color: #666666;
}
.container .wepay image{
  width: 128rpx;
	height: 105rpx;
}
.container .wepay radio{
  width:45rpx;
  height: 45rpx;
}

.container .cardpay{
  width: 550rpx;
	height: 238rpx;
  padding: 0 50rpx;
  margin-top: 62rpx;
	background-color: #f2f9f1;
	border-radius: 10rpx;
	opacity: 0.9;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
	color: #666666;
}

.container .cardpay text{
  font-size: 40rpx;
  font-weight: bolder;
}
.container .cardpay image{
  width: 110rpx;
	height: 78rpx;
}
.submit{
  display: flex;
  justify-content: center;
}
.submit .btn{
  width: 380rpx;
	height: 80rpx;
  margin-top: 314rpx;
	border-radius: 40rpx;
	border: solid 2rpx #ffffff;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
	color: #ffffff;
  background: #8C84F1;
}
.cancelreason{
  padding: 0 40rpx;
  font-size: 26rpx;
	color: #333333;
}
.choosemembercard radio{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  line-height: 100rpx;
}
.choosemembercard .title{
  font-size: 36rpx;
	color: #333333;
  padding: 30rpx 0;
  text-align: center;
}
.choosemembercard .cancelreason .membercard{
  width: 54rpx;
  height: 38rpx;
  margin-right: 18rpx;
}