/* pages/appointment_detail/appointment_detail.wxss */
page {
  background-color: #fff !important;
}


.waitservice{
  display: flex;
  width: 100%;
  height: 164rpx;
  padding: 0 40rpx;
  align-items: center;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  background-color: #fff;
  border-bottom: 20rpx solid #f4f5f7; 
}
.waitservice image{
  width: 80rpx;
	height: 80rpx;
  margin-right: 17rpx;
	/* background-color: #42b069;
	border-radius: 10px; */
}
.waitservice .right view:nth-of-type(2){
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #a09f9d;
}
.content .title{
  padding: 0 40rpx;
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #bababa;
}
.content .title view:first-child{
  color: #252525;
}
.content .detail{
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
	background-color: #f4f5f7;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
.content .detail image{
  width: 150rpx;
	height: 150rpx;
  margin-right: 21rpx;
}
.content .detail .left{
  display: flex;
  align-items: center;
}
.content .detail .left view{
  width: 340rpx;
  white-space: pre-wrap;
}
.content .jishi{
  padding: 0 40rpx;
  border-bottom: 20rpx solid #f4f5f7; 
  width: 100%;
  height: 106rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.gostoreout{
  padding-bottom: 70rpx;
  border-bottom: 20rpx solid #f4f5f7; 

}
.gostoretime{
  width: 100%;
  height: 126rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
.gostoretime .right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.gostoretime .right view:last-child{
  font-size: 26rpx;
	color: #989595;
}
.gostoreperson{
  width: 100%;
  height: 126rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  border-top: 1rpx solid #CECECE;
}
.gostoreperson .right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.gostoreperson .right view:last-child{
  font-size: 26rpx;
	color: #989595;
}
.concact{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 20rpx solid #f4f5f7; 
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
}
.concact image{
  width: 39rpx;
	height: 38rpx;
  margin-right: 12rpx;
}
.btn{
  margin-top: 62rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: flex-end;
}
.btn button{
  width: 154rpx;
	height: 60rpx;
	border-radius: 30rpx;
	border: solid 1rpx #666666;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
  text-align: center;
  line-height: 60rpx;
}
.btn button:first-child{
  margin-right: 14rpx;
}
.changeshow .title{
  font-size: 28rpx;
