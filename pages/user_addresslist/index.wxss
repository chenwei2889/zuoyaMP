/* pages/user_addresslist/index.wxss */

.list {
  padding-bottom: 50rpx;
}



.item {
  width: 100%;
  height: 116rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom: solid 1px #e5e4e4;
}

.item .name {
  width: 120rpx;
  line-height: 116rpx;
}

.item .detail {
  /* padding-left: 30rpx; */
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #444;
}

.item .detail view:last-child {
  width: 470rpx;
  font-size: 24rpx;
  color: #888;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item image{
  width: 30rpx;
	height: 30rpx;
}

.btnout{
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 100rpx;
}

.btn{
  width: 680rpx;
	height: 100rpx;
	border-radius: 50rpx;
	border: solid 2rpx #f15a31;
  font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
  text-align: center;
  line-height: 100rpx;
}
