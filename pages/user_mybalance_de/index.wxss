/* pages/user_mybalance_de/index.wxss */

.container{
  padding: 0 30rpx;
}

.list{
  padding-bottom: 50rpx;
}

.list .item{
  width: 100%;
	height: 150rpx;
  margin-top: 20rpx;
  display: flex;
  padding: 0 40rpx;
  justify-content: space-between;
  align-items: center;
	background-color: #ffffff;
	box-shadow: 0px 5rpx 8rpx 0px	rgba(0, 0, 0, 0.13);
	border-radius: 10rpx;
	border: solid 1rpx #e2e2e2;
}

.item .item-right{
  font-size: 44rpx;
	font-weight: bold;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.item .item-left{
  display: flex;
  align-items: center;
  height: 150rpx;
}

.item .item-left .detail{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}

.item .item-left .detail view:first-child{
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #111111;
}

.item .item-left .detail view:last-child{
  font-size: 22rpx;
  margin-top: 10rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #555555;
}

.item .item-left .img{
  width: 85rpx;
	height: 85rpx;
  margin-right: 20rpx;
}

.item .item-left .img image{
  width: 100%;
  height: 100%;
}


