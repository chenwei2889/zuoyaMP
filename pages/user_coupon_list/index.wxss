/* pages/user_coupon_list/index.wxss */
.container{
  padding: 0 30rpx;
}
.list{
  padding-bottom: 50rpx;
}
.list .item{
  padding: 0 45rpx;
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 6rpx 2rpx #ccc;
}

.list .item .sum{
  height: 177rpx;
  border-bottom: solid 1px #e2e2e2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list .item .sum .sum-left{
  padding: 30rpx 0;
  height: 177rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  font-size: 32rpx;
	font-weight: bold;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.list .item .sum .sum-left view:last-child{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #bab9b9;
}

.list .item .sum .sum-right{
  font-size: 48rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
}

.rules{
  width: 100%;
  height: 75rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rules .rules-left{
  height: 100%;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #bab9b9;
  display: flex;
  align-items: center;
}

.rules .rules-left .iconfont{
  font-size: 24rpx;
  margin-left: 14rpx;
}

.rules .btn{
  width: 150rpx;
	height: 56rpx;
	background-color: #f15a31;
	border-radius: 28rpx;
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  text-align: center;
  line-height: 56rpx;
}

.rules-item{
  padding-bottom: 20rpx;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #bab9b9;
}