.personal-data .list {
  margin-top: 15rpx;
}

.personal-data .item {
  width: 100%;
  background-color: #fff;
  height: 90rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
}

.personal-data .item.name{
  margin-bottom: 40rpx;
  border-radius: 10rpx;
}

.personal-data .item .input {
  width: 415rpx;
  text-align: right;
}

.personal-data .item .input .placeholder{
  font-size: 28rpx;
	color: #bbbbbb;
}
.picker{
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333;
}

.picker .iconfont{
  font-size: 28rpx;
}
.personal-data .modifyBnt {
  font-size: 32rpx;
  color: #fff;
  width: 450rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 76rpx auto 0 auto;
}

.card-status .title{
  font-size: 36rpx;
  line-height: 90rpx;
  text-align: center;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

.card-status image{
  width: 54rpx;
  height: 30rpx;
  display: block;
  margin-right: 20rpx;
}

.card-status .card-list .card-item{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
	height: 90rpx;
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}

