.scroll .scrollarea text {
  font-size: 28rpx;
  width: 12%;
  color: #333;
  margin-right: 8%;
  margin-bottom: 70rpx;
  text-align: center;
  float: left;
}
.nextout{
  padding-bottom: 40rpx;
}
.next{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  width: 670rpx;
	height: 120rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  align-items: center;
  padding-left: 30rpx;
}
.next .left text:nth-of-type(1){
  margin-left: 23rpx;
  color: #333333;
  font-size: 28rpx;
}
.next .left .timechoose{
  font-size: 28rpx;
  color:#f15a31; 
}
.next .left image{
  width: 26rpx;
  height: 26rpx;
}
.next button{
  width: 250rpx;
	height: 120rpx;
	background-color: #f15a31;
  text-align: center;
  line-height: 120rpx;
  font-size: 32rpx;
	color: #fefefe;
}