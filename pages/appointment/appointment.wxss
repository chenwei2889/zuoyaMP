/* pages/appointment/appointment.wxss */

page {
  background-color: #f3f4f6 !important;
}

.container {
  padding: 0 40rpx;
}

.store {
  width: 670rpx;
  height: 120rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.store .storeleft image {
  width: 29rpx;
  height: 27rpx;
}

.store .storeleft text {
  font-size: 28rpx;
  margin-left: 23rpx;
  color: #333;
}

.store .storeright text {
  font-size: 28rpx;
  color: #ccc;
  margin-right: 23rpx;
}

.timelist{
  position: relative;
}

.time {
  height: 103rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 16rpx;
}

.timelist .settimelist {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
}

.timelist .settimelist.active {
  color: #f15a31;
}
.swiper{
  width: 100%;
  height: 632rpx;
  background: #fff;
  border-radius: 10rpx;
}
.scroll {
  width: 100%;
  height: 632rpx;
  background: #fff;
  border-radius: 10rpx;
}

.scroll .scrollarea {
  box-sizing: border-box;
  height: 632rpx;
  padding: 40rpx 0 0 50rpx;
}

