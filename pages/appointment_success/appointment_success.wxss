/* pages/appointment_success/appointment_success.wxss */
page {
  background-color: #fff !important;
}

.container {
  padding: 0 40rpx;
}
.main{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main image{
  width: 130rpx;
  height: 140rpx;
  margin-top: 48rpx;
  margin-bottom: 56rpx;
} 
.main view:nth-of-type(1){
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #f15a31;
}
.main view:nth-of-type(2){
  font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  margin-top: 45rpx;
  margin-bottom: 83rpx;
}
.time{
  width: 100%;
  height: 105rpx;
  border-top: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}
.time view:first-child{
  color: #333333;
}
.btn{
  width: 670rpx;
	height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 38rpx;
	background-color: #f15a31;
	border-radius: 44rpx;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}
